{
  "name": "parcel-template-blank",
  "version": "1.0.4",
  "description": "Blank template project starter-kit with Parcel Bundler",
  "main": "src/index.html",
  "scripts": {
    "dev": "parcel serve $npm_package_main --open",
    "watch": "parcel watch $npm_package_main",
    "build:gh-pages": "rm -rf build/* && parcel build $npm_package_main -d build --public-url /$npm_package_name/",
    "build": "rm -rf build/* && parcel build $npm_package_main -d build --public-url /",
    "clean:cache": "rm -rf .cache dist build",
    "clean:all": "rm -rf node_modules package-lock.json .cache dist build",
    "reset": "rm -rf .git && echo Do not forget change name/version/description in package.json",
    "deploy": "git subtree push --prefix build origin gh-pages"
  },
  "keywords": [
    "parcel",
    "template",
    "html5",
    "css3",
    "postcss",
    "stylelint",
    "javascript",
    "eslint"
  ],
  "author": "Manz",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "htmlhint": "^0.11.0",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-bundle-visualiser": "^1.2.0",
    "postcss-clean": "^1.1.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-font-magician": "^2.2.2",
    "postcss-mixins": "^6.2.2",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.18.0",
    "stylelint": "^11.1.1",
    "stylelint-config-prettier": "^6.0.0",
    "stylelint-config-standard": "^19.0.0"
  },
  "dependencies": {}
}
